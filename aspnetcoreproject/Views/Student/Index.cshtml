@model Group
<section id="banner">
    <div class="item" style="background-color: #33ca7f;">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <div style="padding: 130px 0px 50px 0px;">
                        <h1 class="fw-bold text-white">@Model.Name</h1>
                        <p class="text-white">Müəllim: @Model.Teacher.Name</p>
                        <p class="text-white">Tələbə sayı: 18*</p>
                        <p class="text-white">Qrup sahəsi: @Model.Category.Name</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="groups">
    <div class="container">
        <p class="fw-bold pt-5 pb-3">Tələbələr:</p>
    </div>
    <div class="container">
        <div class="row align-items-center">
            @foreach (Student item in Model.Students)
            {
                <div class="col-4 mb-5">
                    <div class="card text-center" style="padding: 50px;">
                        <img src="~/uploads/students/@item.Image" class="card-img-top">
                        <div class="card-body">

                            <p class="card-text fw-bold ">@item.Name @item.Surname</p>
                            <p class="card-text">@item.Email</p>
                            <a href="/student/details/@item.Id" class="btn btn-success ps-5 pe-5">Ətraflı</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
